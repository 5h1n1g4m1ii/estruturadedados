//exerc.40

import java.util.Scanner;
public class MyClass {
    public static void main(String[] args) {

 Scanner ler = new Scanner(System.in);
 
 int quoc, rest, vali, va12;

 System.out.println("entre com o dividendo ");
 val1 = ler.nextInt();
 System.out.println("entre com divisor. ");
 val2 = ler.nextInt();
 
 quoc = val1 / val2;
 rest = val1 % val2;
 

System.out.println("\nDividendo: " + val1);
System.out.println("\ndivisor: " + val2);
System.out.println("\nquociente: " + quoc);
System.out.println("\nresto: " + rest);

  
  
    }
}

//exerc.41

import java.util.Scanner;
public class MyClass {
    public static void main(String[] args) {

 Scanner ler = new Scanner(System.in);
 
 int a, b, c,d, mp;

 System.out.println("entre com 1 numero: ");
 a = ler.nextInt();
 System.out.println("entre com 2 numero: ");
 b = ler.nextInt();
 System.out.println("entre com 3 numero:");
 c = ler.nextInt();
 System.out.println("entre com 4 numero: ");
 d = ler.nextInt();
 
 mp =  (a*1 + b*2 + c*3 + d*4)/10;
 
 

System.out.println("\nmedia ponderada: " + mp);

    }
}

//exerc.42

import java.util.Scanner;
public class MyClass {
    public static void main(String[] args) {

 Scanner ler = new Scanner(System.in);
 
 double angulo, rang, pi;
 
 pi = 3.14;
 
 System.out.println("digite um angulo em graus: ");
 angulo = ler.nextInt();

 
 rang =  angulo*pi /180;
 
 

System.out.println("\nseno: " + sen(rang);
System.out.println( "\nco-seno: "+ cos(rang));
System.out.println("\ntangente: "+ tan(rang);
System.out.println("\nco-secante: " + 1/ sen(rang);
System.out.println("\nsecante: " +1cos(rang);
System.out.println("\ncotangente: "+ 1/ tan(rang);

  
    }
}

